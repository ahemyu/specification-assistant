# Example environment variables for the application
# Copy this file to .env and fill in your values

# GPT-4.1 configuration
export GPT41_API_KEY="your-gpt41-api-key-here"
export OPENAI_BASE_URL="https://westeurope.api.cognitive.microsoft.com/openai/v1/"

# GPT-4.1-mini configuration
export GPT41_MINI_API_KEY="your-gpt41-mini-api-key-here"
export AZURE_OPENAI_ENDPOINT="https://mf-gwc-tg.cognitiveservices.azure.com/"

# MySQL Database configuration
export MYSQL_USER="app_user"
export MYSQL_PASSWORD="your_mysql_password"
export MYSQL_HOST="127.0.0.1"
export MYSQL_PORT="3306"
export MYSQL_DATABASE="specification_assistant"

# JWT Authentication configuration
# IMPORTANT: Change this to a secure random string in production!
# Generate with: python -c "import secrets; print(secrets.token_urlsafe(32))"
export JWT_SECRET_KEY="change-this-secret-key-in-production"
export JWT_ACCESS_TOKEN_EXPIRE_MINUTES="30"